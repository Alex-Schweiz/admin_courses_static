extends layouts/main
block content
    .content-wrapper
        section.content-header.row
            .col-md-3
                h1 Single Teacher Page
            .col-md-2.col-md-offset-7
                button.btn.btn-primary.edit-one(type='button', data-toggle='modal', data-target='#myModal')
                    a.white-link(href='#')
                        i.fa.fa-pencil
                        |  Edit teacher
                // Modal
                #myModal.modal.fade(role='dialog')
                    .modal-dialog
                        // Modal content
                        .modal-content
                            .modal-header
                                button.close(type='button', data-dismiss='modal') Ã—
                                h3.modal-title Edit Nina Mcintire info
                            .modal-body
                                include includes/teacher-form
                            .modal-footer
                                button.btn.btn-default(type='button', data-dismiss='modal') Close
        section.content
            .row
                .col-md-4
                    .box.box-solid.box-primary
